<?xml version="1.0" encoding="UTF-8"?>
<module name="huawei-oam-bfd-interface"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:oam-bfd-interface="urn:huawei:yang:huawei-oam-bfd-interface"
        xmlns:ext="urn:huawei:yang:huawei-extension"
        xmlns:oammgr="urn:huawei:yang:huawei-oammgr"
        xmlns:bfd="urn:huawei:yang:huawei-bfd"
        xmlns:ifm="urn:huawei:yang:huawei-ifm">
  <namespace uri="urn:huawei:yang:huawei-oam-bfd-interface"/>
  <prefix value="oam-bfd-interface"/>
  <import module="huawei-extension">
    <prefix value="ext"/>
  </import>
  <import module="huawei-oammgr">
    <prefix value="oammgr"/>
  </import>
  <import module="huawei-bfd">
    <prefix value="bfd"/>
  </import>
  <import module="huawei-ifm">
    <prefix value="ifm"/>
  </import>
  <organization>
    <text>Huawei Technologies Co., Ltd.</text>
  </organization>
  <contact>
    <text>Huawei Industrial Base
Bantian, Longgang
Shenzhen 518129
People's Republic of China
Website: http://www.huawei.com
Email: support@huawei.com</text>
  </contact>
  <description>
    <text>Configure the operation, administration and maintenance (OAM) association function.</text>
  </description>
  <revision date="2021-03-19">
    <description>
      <text>Reconstruct leaf.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <revision date="2020-12-12">
    <description>
      <text>Initial revision.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <ext:task-name value="bfd"/>
  <augment target-node="/oammgr:oammgr">
    <description>
      <text>Configure the operation, administration and maintenance (OAM) association function.</text>
    </description>
    <container name="bfd-bind-interfaces">
      <description>
        <text>List of associations between BFD and an interface.</text>
      </description>
      <list name="bfd-bind-interface">
        <key value="if-name"/>
        <description>
          <text>Configure an instance of an association between BFD and an interface.</text>
        </description>
        <leaf name="if-name">
          <type name="leafref">
            <path value="/ifm:ifm/ifm:interfaces/ifm:interface/ifm:name"/>
          </type>
          <description>
            <text>Configure the name of interface.</text>
          </description>
        </leaf>
        <leaf name="reboot-impact">
          <type name="boolean"/>
          <default value="false"/>
          <description>
            <text>Enable/disable a BFD session to associate the interface status after device reboot.</text>
          </description>
        </leaf>
        <choice name="name-or-id">
          <mandatory value="true"/>
          <description>
            <text>List of BFD session configurations.</text>
          </description>
          <case name="name">
            <description>
              <text>List of name of BFD session.</text>
            </description>
            <leaf name="bfd-sess-name">
              <type name="leafref">
                <path value="/bfd:bfd/bfd:sessions/bfd:session/bfd:name"/>
              </type>
              <description>
                <text>Configure the name of a BFD session.</text>
              </description>
            </leaf>
          </case>
          <case name="id">
            <description>
              <text>List of local discriminator of BFD session.</text>
            </description>
            <leaf name="bfd-session-id">
              <type name="uint32">
                <range value="1..16384"/>
              </type>
              <description>
                <text>Configure the local discriminator of a BFD session.</text>
              </description>
            </leaf>
          </case>
        </choice>
      </list>
    </container>
  </augment>
</module>
