<?xml version="1.0" encoding="UTF-8"?>
<module name="huawei-mac-flapping"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:mac-flapping="urn:huawei:yang:huawei-mac-flapping"
        xmlns:l2vpn="urn:huawei:yang:huawei-l2vpn"
        xmlns:ext="urn:huawei:yang:huawei-extension">
  <namespace uri="urn:huawei:yang:huawei-mac-flapping"/>
  <prefix value="mac-flapping"/>
  <import module="huawei-l2vpn">
    <prefix value="l2vpn"/>
  </import>
  <import module="huawei-extension">
    <prefix value="ext"/>
  </import>
  <organization>
    <text>Huawei Technologies Co., Ltd.</text>
  </organization>
  <contact>
    <text>Huawei Industrial Base
Bantian, Longgang
Shenzhen 518129
People's Republic of China
Website: http://www.huawei.com
Email: support@huawei.com</text>
  </contact>
  <description>
    <text>MAC flapping-based loop detection.</text>
  </description>
  <revision date="2020-03-09">
    <description>
      <text>Modify description.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <revision date="2019-04-23">
    <description>
      <text>Initial revision.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <ext:task-name value="mflp"/>
  <typedef name="alarm-enable">
    <type name="enumeration">
      <enum name="block">
        <value value="1"/>
        <description>
          <text>Disable the loop detection alarm function.</text>
        </description>
      </enum>
      <enum name="alarm">
        <value value="2"/>
        <description>
          <text>Enable the loop detection alarm function.</text>
        </description>
      </enum>
    </type>
    <description>
      <text>Alarm enable.</text>
    </description>
  </typedef>
  <typedef name="mflp-enable">
    <type name="enumeration">
      <enum name="disable">
        <value value="1"/>
        <description>
          <text>Disable type.</text>
        </description>
      </enum>
      <enum name="enable">
        <value value="2"/>
        <description>
          <text>Enable type.</text>
        </description>
      </enum>
    </type>
    <description>
      <text>MFLP enable type.</text>
    </description>
  </typedef>
  <container name="mac-flapping">
    <description>
      <text>MAC flapping-based loop detection.</text>
    </description>
    <container name="global-attribute">
      <description>
        <text>Configure global attribute of MFLP.</text>
      </description>
      <leaf name="precise-block-policy">
        <type name="mflp-enable"/>
        <default value="disable"/>
        <description>
          <text>Global blocking policy.</text>
        </description>
      </leaf>
      <leaf name="generate-time">
        <type name="uint32">
          <range value="60..2000000"/>
        </type>
        <units name="s"/>
        <default value="600"/>
        <description>
          <text>Trust interface generation time.</text>
        </description>
      </leaf>
      <leaf name="assist-stp">
        <type name="mflp-enable"/>
        <default value="disable"/>
        <description>
          <text>MAC flapping assist flag.</text>
        </description>
      </leaf>
      <leaf name="traffic-suppression">
        <type name="mflp-enable"/>
        <default value="enable"/>
        <description>
          <text>Global traffic suppress state.</text>
        </description>
      </leaf>
      <leaf name="traffic-suppression-threshold">
        <type name="uint16">
          <range value="10..50"/>
        </type>
        <units name="%"/>
        <default value="10"/>
        <description>
          <text>Traffic suppress threshold.</text>
        </description>
      </leaf>
    </container>
  </container>
  <augment target-node="/l2vpn:l2vpn/l2vpn:instances/l2vpn:instance/l2vpn:vpls">
    <description>
      <text>MAC flapping patameters on VSI.</text>
    </description>
    <container name="mac-flapping">
      <description>
        <text>Configure MAC flapping.</text>
      </description>
      <container name="loop-detect">
        <presence value="Loop detect configuration."/>
        <description>
          <text>Configure VSI MAC flapping entry.</text>
        </description>
        <leaf name="loop-times">
          <type name="uint32">
            <range value="3..1000"/>
          </type>
          <mandatory value="true"/>
          <description>
            <text>Number of MAC address flappings.</text>
          </description>
        </leaf>
        <leaf name="detect-cycle">
          <type name="uint32">
            <range value="3..30"/>
          </type>
          <units name="s"/>
          <mandatory value="true"/>
          <description>
            <text>Detection cycle.</text>
          </description>
        </leaf>
        <leaf name="cycles">
          <type name="uint32">
            <range value="1..15"/>
          </type>
          <mandatory value="true"/>
          <description>
            <text>Number of cycles.</text>
          </description>
        </leaf>
        <leaf name="action">
          <type name="alarm-enable"/>
          <mandatory value="true"/>
          <description>
            <text>Action taken after a loop occurs. The action can be reporting an alarm or blocking an interface.</text>
          </description>
        </leaf>
        <leaf name="retry-times">
          <when condition="../action='block'"/>
          <type name="uint32">
            <range value="0..5"/>
          </type>
          <must condition="(../retry-times and ../block-time) or (not(../retry-times) and not(../block-time))"/>
          <description>
            <text>Retry times.</text>
          </description>
        </leaf>
        <leaf name="block-time">
          <when condition="../action='block'"/>
          <type name="uint32">
            <range value="10..65535"/>
          </type>
          <units name="s"/>
          <must condition="(../retry-times and ../block-time) or (not(../retry-times) and not(../block-time))"/>
          <description>
            <text>Blocking time.</text>
          </description>
        </leaf>
      </container>
    </container>
  </augment>
</module>
