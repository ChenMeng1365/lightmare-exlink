<?xml version="1.0" encoding="UTF-8"?>
<module name="openconfig-system-management"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:oc-sys-mgmt="http://openconfig.net/yang/system/management"
        xmlns:oc-ext="http://openconfig.net/yang/openconfig-ext"
        xmlns:oc-inet="http://openconfig.net/yang/types/inet">
  <yang-version value="1"/>
  <namespace uri="http://openconfig.net/yang/system/management"/>
  <prefix value="oc-sys-mgmt"/>
  <import module="openconfig-extensions">
    <prefix value="oc-ext"/>
  </import>
  <import module="openconfig-inet-types">
    <prefix value="oc-inet"/>
  </import>
  <organization>
    <text>OpenConfig working group</text>
  </organization>
  <contact>
    <text>OpenConfig working group
www.openconfig.net</text>
  </contact>
  <description>
    <text>This module defines configuration and operational state data
related to management services.</text>
  </description>
  <oc-ext:openconfig-version semver="0.2.0"/>
  <revision date="2019-07-10">
    <description>
      <text>Add gRPC default port and metadata authentication</text>
    </description>
    <reference>
      <text>0.2.0</text>
    </reference>
  </revision>
  <revision date="2018-11-21">
    <description>
      <text>Add OpenConfig module metadata extensions.</text>
    </description>
    <reference>
      <text>0.1.2</text>
    </reference>
  </revision>
  <revision date="2018-08-28">
    <description>
      <text>Update description of the ANY enum.</text>
    </description>
    <reference>
      <text>0.1.1</text>
    </reference>
  </revision>
  <revision date="2018-07-26">
    <description>
      <text>Initial public release</text>
    </description>
    <reference>
      <text>0.1.0</text>
    </reference>
  </revision>
  <oc-ext:regexp-posix/>
  <oc-ext:catalog-organization org="openconfig"/>
  <oc-ext:origin origin="openconfig"/>
  <grouping name="system-grpc-server-config">
    <description>
      <text>Configuration data for the gRPC server</text>
    </description>
    <leaf name="enable">
      <type name="boolean"/>
      <default value="true"/>
      <description>
        <text>Enables the gRPC server. The gRPC server is enabled by
default</text>
      </description>
    </leaf>
    <leaf name="port">
      <type name="oc-inet:port-number"/>
      <default value="9339"/>
      <description>
        <text>TCP port on which the gRPC server should listen</text>
      </description>
    </leaf>
    <leaf name="transport-security">
      <type name="boolean"/>
      <default value="true"/>
      <description>
        <text>Use gRPC transport security (e.g., TLS or SSL). Enabled by default.
This allows disabling transport security for use cases where it is not
needed like lab testing.</text>
      </description>
    </leaf>
    <leaf name="certificate-id">
      <type name="string"/>
      <description>
        <text>The certificate ID to be used for authentication</text>
      </description>
    </leaf>
    <leaf name="metadata-authentication">
      <type name="boolean"/>
      <default value="false"/>
      <description>
        <text>Enables gRPC METADATA authentication. See
https://github.com/openconfig/reference/blob/master/rpc/gnmi/gnmi-authentication.md#credentials-and-authentication
for more info.</text>
      </description>
    </leaf>
    <leaf-list name="listen-addresses">
      <type name="union">
        <type name="oc-inet:ip-address"/>
        <type name="enumeration">
          <enum name="ANY">
            <description>
              <text>The gRPC daemon should listen on any address
bound to an interface on the system.</text>
            </description>
          </enum>
        </type>
      </type>
      <description>
        <text>The IP addresses that the gRPC server should listen
on. This may be an IPv4 or an IPv6 address</text>
      </description>
    </leaf-list>
  </grouping>
  <grouping name="system-grpc-server-top">
    <description>
      <text>Top-level grouping for system gRPC server data</text>
    </description>
    <container name="grpc-server">
      <description>
        <text>Top-level container for the gRPC server</text>
      </description>
      <container name="config">
        <description>
          <text>Configuration data for the system gRPC server</text>
        </description>
        <uses name="system-grpc-server-config"/>
      </container>
      <container name="state">
        <config value="false"/>
        <description>
          <text>Operational state data for the system gRPC server</text>
        </description>
        <uses name="system-grpc-server-config"/>
      </container>
    </container>
  </grouping>
</module>
