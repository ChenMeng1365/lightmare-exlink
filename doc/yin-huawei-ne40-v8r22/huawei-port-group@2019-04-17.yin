<?xml version="1.0" encoding="UTF-8"?>
<module name="huawei-port-group"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:port-group="urn:huawei:yang:huawei-port-group"
        xmlns:ifm="urn:huawei:yang:huawei-ifm"
        xmlns:ext="urn:huawei:yang:huawei-extension">
  <namespace uri="urn:huawei:yang:huawei-port-group"/>
  <prefix value="port-group"/>
  <import module="huawei-ifm">
    <prefix value="ifm"/>
  </import>
  <import module="huawei-extension">
    <prefix value="ext"/>
  </import>
  <organization>
    <text>Huawei Technologies Co., Ltd.</text>
  </organization>
  <contact>
    <text>Huawei Industrial Base
Bantian, Longgang
Shenzhen 518129
People's Republic of China
Website: http://www.huawei.com
Email: support@huawei.com</text>
  </contact>
  <description>
    <text>Display permanent port group information.</text>
  </description>
  <revision date="2019-04-17">
    <description>
      <text>Initial revision.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <ext:task-name value="interface-mgr"/>
  <container name="port-group">
    <description>
      <text>Display permanent port group information.</text>
    </description>
    <container name="groups">
      <description>
        <text>List of permanent port groups.</text>
      </description>
      <list name="group">
        <key value="name"/>
        <description>
          <text>Configure a permanent port group.</text>
        </description>
        <leaf name="name">
          <type name="string">
            <length value="1..32"/>
          </type>
          <ext:case-sensitivity value="lower-or-upper"/>
          <description>
            <text>Specify the name of a permanent port group.</text>
          </description>
        </leaf>
        <container name="members">
          <description>
            <text>List of permanent port group member interfaces.</text>
          </description>
          <list name="member">
            <key value="if-name"/>
            <description>
              <text>Configure permanent port group member interfaces.</text>
            </description>
            <leaf name="if-name">
              <type name="leafref">
                <path value="/ifm:ifm/ifm:interfaces/ifm:interface/ifm:name"/>
              </type>
              <description>
                <text>Configure the name of a permanent port group member interface.</text>
              </description>
            </leaf>
          </list>
        </container>
      </list>
    </container>
  </container>
  <rpc name="port-group-shutdown">
    <description>
      <text>Configure the administrative status of permanent port group member interfaces.</text>
    </description>
    <ext:node-ref value="/ifm:ifm/ifm:interfaces/ifm:interface/ifm:admin-status"/>
    <input>
      <leaf name="name">
        <type name="leafref">
          <path value="/port-group:port-group/port-group:groups/port-group:group/port-group:name"/>
        </type>
        <mandatory value="true"/>
        <description>
          <text>Specify the name of a permanent port group.</text>
        </description>
      </leaf>
      <leaf name="shutdown">
        <type name="boolean"/>
        <default value="false"/>
        <description>
          <text>Shutdown member interfaces of the permanent port group.</text>
        </description>
      </leaf>
    </input>
  </rpc>
</module>
