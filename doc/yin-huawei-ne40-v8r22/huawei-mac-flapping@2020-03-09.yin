<?xml version="1.0" encoding="UTF-8"?>
<module name="huawei-mac-flapping"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:mac-flapping="urn:huawei:yang:huawei-mac-flapping"
        xmlns:ifm="urn:huawei:yang:huawei-ifm"
        xmlns:ethernet="urn:huawei:yang:huawei-ethernet"
        xmlns:bd="urn:huawei:yang:huawei-bd"
        xmlns:vlan="urn:huawei:yang:huawei-vlan"
        xmlns:l2vpn="urn:huawei:yang:huawei-l2vpn"
        xmlns:ext="urn:huawei:yang:huawei-extension"
        xmlns:pub-type="urn:huawei:yang:huawei-pub-type"
        xmlns:inet="urn:ietf:params:xml:ns:yang:ietf-inet-types">
  <namespace uri="urn:huawei:yang:huawei-mac-flapping"/>
  <prefix value="mac-flapping"/>
  <import module="huawei-ifm">
    <prefix value="ifm"/>
  </import>
  <import module="huawei-ethernet">
    <prefix value="ethernet"/>
  </import>
  <import module="huawei-bd">
    <prefix value="bd"/>
  </import>
  <import module="huawei-vlan">
    <prefix value="vlan"/>
  </import>
  <import module="huawei-l2vpn">
    <prefix value="l2vpn"/>
  </import>
  <import module="huawei-extension">
    <prefix value="ext"/>
  </import>
  <import module="huawei-pub-type">
    <prefix value="pub-type"/>
  </import>
  <import module="ietf-inet-types">
    <prefix value="inet"/>
  </import>
  <organization>
    <text>Huawei Technologies Co., Ltd.</text>
  </organization>
  <contact>
    <text>Huawei Industrial Base
Bantian, Longgang
Shenzhen 518129
People's Republic of China
Website: http://www.huawei.com
Email: support@huawei.com</text>
  </contact>
  <description>
    <text>MAC flapping-based loop detection.</text>
  </description>
  <revision date="2020-03-09">
    <description>
      <text>Modify description.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <revision date="2019-04-23">
    <description>
      <text>Initial revision.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <ext:task-name value="mflp"/>
  <typedef name="alarm-enable">
    <type name="enumeration">
      <enum name="block">
        <value value="1"/>
        <description>
          <text>Disable the loop detection alarm function.</text>
        </description>
      </enum>
      <enum name="alarm">
        <value value="2"/>
        <description>
          <text>Enable the loop detection alarm function.</text>
        </description>
      </enum>
    </type>
    <description>
      <text>Alarm enable.</text>
    </description>
  </typedef>
  <typedef name="mflp-enable">
    <type name="enumeration">
      <enum name="disable">
        <value value="1"/>
        <description>
          <text>Disable type.</text>
        </description>
      </enum>
      <enum name="enable">
        <value value="2"/>
        <description>
          <text>Enable type.</text>
        </description>
      </enum>
    </type>
    <description>
      <text>MFLP enable type.</text>
    </description>
  </typedef>
  <typedef name="block-state-type">
    <type name="enumeration">
      <enum name="temporary">
        <value value="1"/>
        <description>
          <text>Temporary block.</text>
        </description>
      </enum>
      <enum name="permanent">
        <value value="2"/>
        <description>
          <text>Permanent block.</text>
        </description>
      </enum>
    </type>
    <description>
      <text>MFLP block state type.</text>
    </description>
  </typedef>
  <typedef name="block-trust-type">
    <type name="enumeration">
      <enum name="precise">
        <value value="1"/>
        <description>
          <text>Precise.</text>
        </description>
      </enum>
      <enum name="imprecise">
        <value value="2"/>
        <description>
          <text>Imprecise.</text>
        </description>
      </enum>
    </type>
    <description>
      <text>MFLP block trust type.</text>
    </description>
  </typedef>
  <grouping name="group-mac-flapping">
    <description>
      <text>Configuration of MAC flapping.</text>
    </description>
    <container name="mac-flapping">
      <description>
        <text>Configure MAC flapping.</text>
      </description>
      <container name="loop-detect">
        <presence value="Loop detect configuration."/>
        <description>
          <text>Configure VSI MAC flapping entry.</text>
        </description>
        <leaf name="loop-times">
          <type name="uint32">
            <range value="3..1000"/>
          </type>
          <mandatory value="true"/>
          <description>
            <text>Number of MAC address flappings.</text>
          </description>
        </leaf>
        <leaf name="detect-cycle">
          <type name="uint32">
            <range value="3..30"/>
          </type>
          <units name="s"/>
          <mandatory value="true"/>
          <description>
            <text>Detection cycle.</text>
          </description>
        </leaf>
        <leaf name="cycles">
          <type name="uint32">
            <range value="1..15"/>
          </type>
          <mandatory value="true"/>
          <description>
            <text>Number of cycles.</text>
          </description>
        </leaf>
        <leaf name="action">
          <type name="alarm-enable"/>
          <mandatory value="true"/>
          <description>
            <text>Action taken after a loop occurs. The action can be reporting an alarm or blocking an interface.</text>
          </description>
        </leaf>
        <leaf name="retry-times">
          <when condition="../action='block'"/>
          <type name="uint32">
            <range value="0..5"/>
          </type>
          <must condition="(../retry-times and ../block-time) or (not(../retry-times) and not(../block-time))"/>
          <description>
            <text>Retry times.</text>
          </description>
        </leaf>
        <leaf name="block-time">
          <when condition="../action='block'"/>
          <type name="uint32">
            <range value="10..65535"/>
          </type>
          <units name="s"/>
          <must condition="(../retry-times and ../block-time) or (not(../retry-times) and not(../block-time))"/>
          <description>
            <text>Blocking time.</text>
          </description>
        </leaf>
      </container>
      <container name="precise-block">
        <presence value="precise-block"/>
        <description>
          <text>Configure precise blocking policy table.</text>
        </description>
      </container>
    </container>
  </grouping>
  <container name="mac-flapping">
    <description>
      <text>MAC flapping-based loop detection.</text>
    </description>
    <container name="global-attribute">
      <description>
        <text>Configure global attribute of MFLP.</text>
      </description>
      <leaf name="precise-block-policy">
        <type name="mflp-enable"/>
        <default value="disable"/>
        <description>
          <text>Global blocking policy.</text>
        </description>
      </leaf>
      <leaf name="generate-time">
        <type name="uint32">
          <range value="60..2000000"/>
        </type>
        <units name="s"/>
        <default value="600"/>
        <description>
          <text>Trust interface generation time.</text>
        </description>
      </leaf>
      <leaf name="assist-stp">
        <type name="mflp-enable"/>
        <default value="disable"/>
        <description>
          <text>MAC flapping assist flag.</text>
        </description>
      </leaf>
      <leaf name="traffic-suppression">
        <type name="mflp-enable"/>
        <default value="enable"/>
        <description>
          <text>Global traffic suppress state.</text>
        </description>
      </leaf>
      <leaf name="traffic-suppression-threshold">
        <type name="uint16">
          <range value="10..50"/>
        </type>
        <units name="%"/>
        <default value="10"/>
        <description>
          <text>Traffic suppress threshold.</text>
        </description>
      </leaf>
    </container>
    <container name="vsi-blocks">
      <config value="false"/>
      <description>
        <text>List of displayed VSI blocked interface entry.</text>
      </description>
      <list name="vsi-block">
        <key value="vsi-name interface-name pw-id peer-ip"/>
        <description>
          <text>Statistics of VSI blocked interface entry.</text>
        </description>
        <leaf name="vsi-name">
          <type name="leafref">
            <path value="/l2vpn:l2vpn/l2vpn:instances/l2vpn:instance/l2vpn:name"/>
          </type>
          <description>
            <text>VSI name.</text>
          </description>
        </leaf>
        <leaf name="interface-name">
          <type name="leafref">
            <path value="/ifm:ifm/ifm:interfaces/ifm:interface/ifm:name"/>
          </type>
          <description>
            <text>Blocked interface name.</text>
          </description>
        </leaf>
        <leaf name="pw-id">
          <type name="uint32"/>
          <description>
            <text>Remote PW ID.</text>
          </description>
        </leaf>
        <leaf name="peer-ip">
          <type name="inet:ipv4-address"/>
          <description>
            <text>Peer IP address.</text>
          </description>
        </leaf>
        <leaf name="state">
          <type name="block-state-type"/>
          <description>
            <text>Blocking state.</text>
          </description>
        </leaf>
        <leaf name="linked-interface-name">
          <type name="leafref">
            <path value="/ifm:ifm/ifm:interfaces/ifm:interface/ifm:name"/>
          </type>
          <description>
            <text>Blocked associated interface name.</text>
          </description>
        </leaf>
        <leaf name="detect-mac">
          <type name="pub-type:mac-address"/>
          <description>
            <text>Detect MAC address.</text>
          </description>
        </leaf>
        <leaf name="trust-type">
          <type name="block-trust-type"/>
          <description>
            <text>Blocking type.</text>
          </description>
        </leaf>
        <leaf name="vlanif-name">
          <type name="leafref">
            <path value="/ifm:ifm/ifm:interfaces/ifm:interface/ifm:name"/>
          </type>
          <description>
            <text>Blocked VLANIF name.</text>
          </description>
        </leaf>
        <leaf name="mapping-vlan-id">
          <type name="uint16">
            <range value="0..4094"/>
          </type>
          <description>
            <text>Mapping VLAN ID.</text>
          </description>
        </leaf>
      </list>
    </container>
    <container name="bd-blocks">
      <config value="false"/>
      <description>
        <text>List of displayed BD blocked interface entry.</text>
      </description>
      <list name="bd-block">
        <key value="bd-id interface-name pw-id peer-ip"/>
        <description>
          <text>Statistics of displayed BD blocked interface entry.</text>
        </description>
        <leaf name="bd-id">
          <type name="leafref">
            <path value="/bd:bd/bd:instances/bd:instance/bd:id"/>
          </type>
          <description>
            <text>BD ID.</text>
          </description>
        </leaf>
        <leaf name="interface-name">
          <type name="leafref">
            <path value="/ifm:ifm/ifm:interfaces/ifm:interface/ifm:name"/>
          </type>
          <description>
            <text>Blocked interface name.</text>
          </description>
        </leaf>
        <leaf name="pw-id">
          <type name="uint32"/>
          <description>
            <text>Remote PW ID.</text>
          </description>
        </leaf>
        <leaf name="peer-ip">
          <type name="inet:ipv4-address"/>
          <description>
            <text>Peer IP address.</text>
          </description>
        </leaf>
        <leaf name="state">
          <type name="block-state-type"/>
          <description>
            <text>Blocking state.</text>
          </description>
        </leaf>
        <leaf name="linked-interface-name">
          <type name="leafref">
            <path value="/ifm:ifm/ifm:interfaces/ifm:interface/ifm:name"/>
          </type>
          <description>
            <text>Blocked associated interface name.</text>
          </description>
        </leaf>
        <leaf name="detect-mac">
          <type name="pub-type:mac-address"/>
          <description>
            <text>Detect MAC address.</text>
          </description>
        </leaf>
        <leaf name="trust-type">
          <type name="block-trust-type"/>
          <description>
            <text>Blocking type.</text>
          </description>
        </leaf>
        <leaf name="is-blackhole">
          <type name="boolean"/>
          <default value="false"/>
          <description>
            <text>Is blackhole MAC block.</text>
          </description>
        </leaf>
      </list>
    </container>
    <container name="vlan-blocks">
      <config value="false"/>
      <description>
        <text>List of displayed VLAN blocked interface entry.</text>
      </description>
      <list name="vlan-block">
        <key value="vlan-id interface-name"/>
        <description>
          <text>Statistics of displayed VLAN blocked interface entry.</text>
        </description>
        <leaf name="vlan-id">
          <type name="uint16">
            <range value="1..4094"/>
          </type>
          <description>
            <text>VLAN ID.</text>
          </description>
        </leaf>
        <leaf name="interface-name">
          <type name="leafref">
            <path value="/ifm:ifm/ifm:interfaces/ifm:interface/ifm:name"/>
          </type>
          <description>
            <text>Blocked interface name.</text>
          </description>
        </leaf>
        <leaf name="state">
          <type name="block-state-type"/>
          <description>
            <text>Blocking state.</text>
          </description>
        </leaf>
        <leaf name="detect-mac">
          <type name="pub-type:mac-address"/>
          <description>
            <text>Detect MAC address.</text>
          </description>
        </leaf>
        <leaf name="trust-type">
          <type name="block-trust-type"/>
          <description>
            <text>Blocking type.</text>
          </description>
        </leaf>
      </list>
    </container>
  </container>
  <augment target-node="/l2vpn:l2vpn/l2vpn:instances/l2vpn:instance/l2vpn:vpls">
    <description>
      <text>MAC flapping patameters on VSI.</text>
    </description>
    <uses name="group-mac-flapping">
      <refine target-node="mac-flapping/precise-block">
        <must condition="../../l2vpn:work-mode='normal'"/>
      </refine>
    </uses>
  </augment>
  <augment target-node="/bd:bd/bd:instances/bd:instance">
    <description>
      <text>MAC flapping patameters on BD.</text>
    </description>
    <uses name="group-mac-flapping">
      <refine target-node="mac-flapping/loop-detect">
        <description>
          <text>Configure BD MAC flapping entry.</text>
        </description>
      </refine>
    </uses>
  </augment>
  <augment target-node="/vlan:vlan/vlan:vlans/vlan:vlan">
    <description>
      <text>MAC flapping patameters on VLAN.</text>
    </description>
    <uses name="group-mac-flapping">
      <refine target-node="mac-flapping/loop-detect">
        <description>
          <text>Configure VLAN MAC flapping entry.</text>
        </description>
      </refine>
    </uses>
  </augment>
  <augment target-node="/ifm:ifm/ifm:interfaces/ifm:interface/ethernet:ethernet/ethernet:main-interface">
    <description>
      <text>MAC flapping patameters on the interface.</text>
    </description>
    <container name="mflp-mac-shift">
      <presence value="mflp mac shift"/>
      <description>
        <text>Configure MAC flapping-based loop detection association on an interface.</text>
      </description>
    </container>
  </augment>
  <augment target-node="/ifm:ifm/ifm:interfaces/ifm:interface/ethernet:ethernet">
    <description>
      <text>MAC flapping patameters on the interface.</text>
    </description>
    <container name="mac-flapping">
      <description>
        <text>Configure MAC flapping table.</text>
      </description>
      <container name="block-priority">
        <presence value="Blocking priority configuration."/>
        <description>
          <text>Configure blocking priority.</text>
        </description>
        <leaf name="priority">
          <type name="uint32">
            <range value="1..4"/>
          </type>
          <mandatory value="true"/>
          <description>
            <text>Priority value.</text>
          </description>
        </leaf>
      </container>
    </container>
  </augment>
  <augment target-node="/l2vpn:l2vpn/l2vpn:instances/l2vpn:instance/l2vpn:vpls/l2vpn:ldp-signaling/l2vpn:pws/l2vpn:pw">
    <description>
      <text>MAC flapping patameters on LDP-PW.</text>
    </description>
    <container name="mac-flapping">
      <when condition="../l2vpn:name"/>
      <description>
        <text>Configure MAC flapping attribute.</text>
      </description>
      <container name="block-priority">
        <must condition="../../../../../l2vpn:work-mode!='i-vsi-b-evpn-interworking'"/>
        <presence value="Blocking priority configuration."/>
        <description>
          <text>Configure Blocking priority.</text>
        </description>
        <leaf name="priority">
          <type name="uint32">
            <range value="1..4"/>
          </type>
          <mandatory value="true"/>
          <description>
            <text>Priority value.</text>
          </description>
        </leaf>
      </container>
    </container>
  </augment>
</module>
