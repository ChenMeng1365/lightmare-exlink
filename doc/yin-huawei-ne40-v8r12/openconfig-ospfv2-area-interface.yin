    <reference>
      <text>0.0.1</text>
    </reference>
  </revision>
  <grouping name="ospfv2-area-interface-config">
    <description>
      <text>Configuration parameters for an OSPF interface</text>
    </description>
    <leaf name="id">
      <type name="string"/>
      <description>
        <text>An operator-specified string utilised to uniquely
reference this interface</text>
      </description>
    </leaf>
    <leaf name="network-type">
      <type name="identityref">
        <base name="oc-ospf-types:OSPF_NETWORK_TYPE"/>
      </type>
      <description>
        <text>The type of network that OSPFv2 should use for the specified
interface.</text>
      </description>
    </leaf>
    <leaf name="priority">
      <type name="uint8"/>
      <description>
        <text>The local system's priority to become the designated
router</text>
      </description>
    </leaf>
    <leaf name="multi-area-adjacency-primary">
      <type name="boolean"/>
      <default value="true"/>
      <description>
        <text>When the specified interface is included in more than one
area's configuration, this leaf marks whether the area should
be considered the primary (when the value is true). In the
case that this value is false, the area is considered a
secondary area.</text>
      </description>
    </leaf>
    <leaf name="authentication-type">
      <type name="string"/>
      <description>
        <text>The type of authentication that should be used on this
interface</text>
      </description>
    </leaf>
    <leaf name="metric">
      <type name="oc-ospf-types:ospf-metric"/>
      <description>
        <text>The metric for the interface</text>
      </description>
    </leaf>
    <leaf name="passive">
      <type name="boolean"/>
      <description>
        <text>When this leaf is set to true, the interface should be
advertised within the OSPF area but OSPF adjacencies should
not be established over the interface</text>
      </description>
    </leaf>
    <leaf name="hide-network">
      <type name="boolean"/>
      <description>
        <text>When this leaf is set to true, the network connected to
the interface should be hidden from OSPFv2 advertisements
per the procedure described in RFC6860.</text>
      </description>
      <reference>
        <text>RFC6860 - Hiding Transit-Only Networks in OSFF</text>
      </reference>
    </leaf>
  </grouping>
  <grouping name="ospfv2-area-interface-timers-config">
    <description>
      <text>Configuration parameters relating to per-interface OSPFv2
timers</text>
    </description>
    <leaf name="dead-interval">
      <type name="uint32"/>
      <units name="seconds"/>
      <description>
        <text>The number of seconds that the local system should let
elapse before declaring a silent router down</text>
      </description>
      <reference>
        <text>RFC2328</text>
      </reference>
    </leaf>
    <leaf name="hello-interval">
      <type name="uint32"/>
      <units name="seconds"/>
      <description>
        <text>The number of seconds the local system waits between the
transmission of subsequent Hello packets</text>
      </description>
    </leaf>
    <leaf name="retransmission-interval">
      <type name="uint32"/>
      <units name="seconds"/>
      <description>
        <text>The number of seconds that the local system waits before
retransmitting an unacknowledged LSA.</text>
      </description>
    </leaf>
  </grouping>
  <grouping name="ospfv2-area-interface-mpls-config">
    <description>
      <text>Configuration parameters relating to MPLS extensions for OSPF</text>
    </description>
    <leaf name="traffic-engineering-metric">
      <type name="uint32"/>
      <description>
        <text>A link metric that should only be considered for traffic
engineering purposes.</text>
      </description>
      <reference>
        <text>RFC3630, ยง2.5.5</text>
      </reference>
    </leaf>
  </grouping>
  <grouping name="ospfv2-area-interface-neighbor-config">
    <description>
      <text>Configuration parameters relating to an individual neighbor
system on an interface within an OSPF area</text>
    </description>
    <leaf name="router-id">
      <type name="yang:dotted-quad"/>
      <description>
        <text>The router ID of the remote system.</text>
      </description>
    </leaf>
    <leaf name="metric">
      <type name="oc-ospf-types:ospf-metric"/>
      <description>
        <text>The metric that should be considered to the remote neighbor
over this interface. This configuration is only applicable
for multiple-access networks</text>
      </description>
    </leaf>
  </grouping>
  <grouping name="ospfv2-area-interface-neighbor-state">
    <description>
      <text>Operational state parameters relating an individual neighbor
system on an interface within an OSPF area</text>
    </description>
    <leaf name="priority">
      <type name="uint8"/>
      <description>
        <text>The remote system's priority to become the designated
router</text>
      </description>
    </leaf>
    <leaf name="dead-time">
      <type name="oc-types:timeticks64"/>
      <description>
        <text>The time at which this neighbor's adjacency will be
considered dead. The value is expressed relative to
the Unix Epoch (Jan 1, 1970 00:00:00 UTC).</text>
      </description>
    </leaf>
    <leaf name="designated-router">
      <type name="yang:dotted-quad"/>
      <description>
        <text>The designated router for the adjacency. This device
advertises the Network LSA for broadcast and NBMA networks.</text>
      </description>
    </leaf>
    <leaf name="backup-designated-router">
      <type name="yang:dotted-quad"/>
      <description>
        <text>The backup designated router for the adjacency.</text>
      </description>
    </leaf>
    <leaf name="optional-capabilities">
      <type name="yang:hex-string"/>
      <description>
        <text>The optional capabilities field received in the Hello
message from the neighbor</text>
      </description>
    </leaf>
    <leaf name="last-established-time">
      <type name="oc-types:timeticks64"/>
      <description>
        <text>The time at which the adjacency was last established with
the neighbor. That is to say the time at which the
adjacency last transitioned into the FULL state. The
value is expressed relative to the Unix Epoch (Jan 1 1970
00:00:00 UTC).</text>
      </description>
    </leaf>
    <leaf name="adjacency-state">
      <type name="identityref">
        <base name="oc-ospf-types:OSPF_NEIGHBOR_STATE"/>
      </type>
      <description>
        <text>The state of the adjacency with the neighbor.</text>
      </description>
    </leaf>
    <leaf name="state-changes">
      <type name="uint32"/>
      <description>
        <text>The number of transitions out of the FULL state that this
neighbor has been through</text>
      </description>
    </leaf>
    <leaf name="retranmission-queue-length">
      <type name="uint32"/>
      <description>
        <text>The number of LSAs that are currently in the queue to be
retransmitted to the neighbor</text>
      </description>
    </leaf>
  </grouping>
  <grouping name="ospfv2-area-interface-lsa-filter-config">
    <description>
      <text>Configuration options relating to filtering LSAs
on an interface.</text>
    </description>
    <leaf name="all">
      <type name="boolean"/>
      <description>
        <text>When this leaf is set to true, all LSAs should be
filtered to the neighbours with whom adjacencies are
formed on the interface.</text>
      </description>
    </leaf>
  </grouping>
  <grouping name="ospfv2-area-interface-mpls-igp-ldp-sync-state">
    <description>
      <text>Operational state parameters relating to MPLS LDP/IGP
synchronization on a per-neighbor basis</text>
    </description>
    <leaf name="synchronized">
      <type name="boolean"/>
      <description>
        <text>When the value of this leaf is set to true, the
LDP neighbors reachable via this interface are considered
to be synchronized, and hence the link is considered
usable by the IGP.</text>
      </description>
    </leaf>
  </grouping>
  <grouping name="ospfv2-area-interfaces-structure">
    <description>
      <text>Structural grouping for configuration and operational state
parameters that relate to an interface</text>
    </description>
    <container name="interfaces">
      <description>
        <text>Enclosing container for a list of interfaces enabled within
this area</text>
      </description>
      <list name="interface">
        <key value="id"/>
        <description>
          <text>List of interfaces which are enabled within this area</text>
        </description>
        <leaf name="id">
          <type name="leafref">
            <path value="../config/id"/>
          </type>
          <description>
            <text>A pointer to the identifier for the interface.</text>
          </description>
        </leaf>
        <container name="config">
          <description>
            <text>Configuration parameters for the interface on which
OSPFv2 is enabled</text>
          </description>
          <uses name="ospfv2-area-interface-config"/>
        </container>
        <container name="state">
          <config value="false"/>
          <description>
            <text>Operational state parameters for the interface on which
OSPFv2 is enabled</text>
          </description>
          <uses name="ospfv2-area-interface-config"/>
        </container>
        <uses name="oc-if:interface-ref"/>
        <container name="timers">
          <description>
            <text>Timers relating to OSPFv2 on the interface</text>
          </description>
          <container name="config">
            <description>
              <text>Configuration parameters for OSPFv2 timers on the
interface</text>
            </description>
            <uses name="ospfv2-area-interface-timers-config"/>
          </container>
          <container name="state">
            <config value="false"/>
            <description>
              <text>Operational state parameters for OSPFv2 timers on
the interface</text>
            </description>
            <uses name="ospfv2-area-interface-timers-config"/>
          </container>
        </container>
        <container name="mpls">
          <description>
            <text>Configuration and operational state parameters for
OSPFv2 extensions related to MPLS on the interface.</text>
          </description>
          <container name="config">
            <description>
              <text>Configuration parameters for OSPFv2 extensions relating
to MPLS for the interface</text>
            </description>
            <uses name="ospfv2-area-interface-mpls-config"/>
          </container>
          <container name="state">
            <config value="false"/>
            <description>
              <text>Operational state for OSPFv2 extensions relating to
MPLS for the interface</text>
            </description>
            <uses name="ospfv2-area-interface-mpls-config"/>
          </container>
          <container name="igp-ldp-sync">
            <description>
              <text>OSPFv2 parameters relating to LDP/IGP synchronization</text>
            </description>
            <container name="config">
              <description>
                <text>Configuration parameters relating to LDP/IG
synchronization.</text>
              </description>
              <uses name="ospfv2-common-mpls-igp-ldp-sync-config"/>
            </container>
            <container name="state">
              <config value="false"/>
              <description>
                <text>Operational state variables relating to LDP/IGP
synchronization</text>
              </description>
              <uses name="ospfv2-common-mpls-igp-ldp-sync-config"/>
              <uses name="ospfv2-area-interface-mpls-igp-ldp-sync-state"/>
            </container>
          </container>
        </container>
        <container name="lsa-filter">
          <description>
            <text>OSPFv2 parameters relating to filtering of LSAs to
neighbors the specified interface.</text>
          </description>
          <container name="config">
            <description>
              <text>Configuration parameters relating to filtering LSAs
on the specified interface.</text>
            </description>
            <uses name="ospfv2-area-interface-lsa-filter-config"/>
          </container>
          <container name="state">
            <config value="false"/>
            <description>
              <text>Operational state parameters relating to filtering
LSAs on the specified interface</text>
            </description>
            <uses name="ospfv2-area-interface-lsa-filter-config"/>
          </container>
        </container>
        <container name="neighbors">
          <description>
            <text>Enclosing container for the list of neighbors that
an adjacency has been established with on the interface</text>
          </description>
          <list name="neighbor">
            <key value="router-id"/>
            <description>
              <text>A neighbor with which an OSPFv2 adjacency has been
established within this area</text>
            </description>
            <leaf name="router-id">
              <type name="leafref">
                <path value="../config/router-id"/>
              </type>
              <description>
                <text>Reference to the router ID of the adjacent system</text>
              </description>
            </leaf>
            <container name="config">
              <description>
                <text>Configuration parameters relating to the adjacent
system</text>
              </description>
              <uses name="ospfv2-area-interface-neighbor-config"/>
            </container>
            <container name="state">
              <config value="false"/>
              <description>
                <text>Operational state parameters relating to the adjacent
system</text>
              </description>
              <uses name="ospfv2-area-interface-neighbor-config"/>
              <uses name="ospfv2-area-interface-neighbor-state"/>
            </container>
          </list>
        </container>
      </list>
    </container>
  </grouping>
</submodule>
