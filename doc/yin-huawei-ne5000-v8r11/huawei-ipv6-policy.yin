<?xml version="1.0" encoding="UTF-8"?>
<module name="huawei-ipv6-policy"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:ipv6-policy="urn:huawei:yang:huawei-ipv6-policy"
        xmlns:inet="urn:ietf:params:xml:ns:yang:ietf-inet-types"
        xmlns:ni="urn:huawei:yang:huawei-network-instance"
        xmlns:ext="urn:huawei:yang:huawei-extension"
        xmlns:l3vpn="urn:huawei:yang:huawei-l3vpn">
  <namespace uri="urn:huawei:yang:huawei-ipv6-policy"/>
  <prefix value="ipv6-policy"/>
  <import module="ietf-inet-types">
    <prefix value="inet"/>
  </import>
  <import module="huawei-network-instance">
    <prefix value="ni"/>
  </import>
  <import module="huawei-extension">
    <prefix value="ext"/>
  </import>
  <import module="huawei-l3vpn">
    <prefix value="l3vpn"/>
  </import>
  <organization>
    <text>Huawei Technologies Co., Ltd.</text>
  </organization>
  <contact>
    <text>Huawei Industrial Base
Bantian, Longgang
Shenzhen 518129
People's Republic of China
Website: http://www.huawei.com
Email: support@huawei.com</text>
  </contact>
  <description>
    <text>This module contains a collection of YANG definitions for
configuring IP implementations.
Copyright (C) 2019 Huawei Technologies Co., Ltd. All rights reserved.</text>
  </description>
  <revision date="2020-02-14">
    <description>
      <text>Modify the description of nodes.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <revision date="2019-04-15">
    <description>
      <text>Reinitialize revision.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <revision date="2019-04-10">
    <description>
      <text>Initial revision.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <ext:task-name value="interface-mgr"/>
  <augment target-node="/ni:network-instance/ni:instances/ni:instance">
    <when condition="/ni:network-instance/ni:instances/ni:instance/l3vpn:afs/l3vpn:af[l3vpn:type='ipv6-unicast']"/>
    <description>
      <text>Policies for selecting source and destination IPv6 addresses and parameters for configuring IP on interfaces.</text>
    </description>
    <container name="ipv6-policys">
      <description>
        <text>List of policies for selecting source and destination IPv6 addresses.</text>
      </description>
      <list name="ipv6-policy">
        <key value="ipv6-prefix ipv6-prefix-length"/>
        <max-elements value="50"/>
        <description>
          <text>Configure policy for selecting source and destination IPv6 addresses.</text>
        </description>
        <leaf name="ipv6-prefix">
          <type name="inet:ipv6-address-no-zone"/>
          <description>
            <text>Specifies the prefix of an IPv6 address.</text>
          </description>
        </leaf>
        <leaf name="ipv6-prefix-length">
          <type name="uint32">
            <range value="0..128"/>
          </type>
          <description>
            <text>Specifies the prefix length of an IPv6 address.</text>
          </description>
        </leaf>
        <leaf name="prefix-precedence">
          <type name="uint32">
            <range value="0..4294967295"/>
          </type>
          <mandatory value="true"/>
          <description>
            <text>Specifies the priority of an IPv6 address when the address is the destination address.</text>
          </description>
        </leaf>
        <leaf name="prefix-label">
          <type name="uint32">
            <range value="0..4294967295"/>
          </type>
          <mandatory value="true"/>
          <description>
            <text>Specifies the priority of an IPv6 address when the address is the source address.</text>
          </description>
        </leaf>
        <leaf name="default-flag">
          <type name="boolean"/>
          <default value="false"/>
          <config value="false"/>
          <description>
            <text>Specifies whether the configuration is an default configuration.</text>
          </description>
        </leaf>
      </list>
    </container>
  </augment>
</module>
