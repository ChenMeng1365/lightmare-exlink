<?xml version="1.0" encoding="UTF-8"?>
<module name="huawei-bier-fwd"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:bier-fwd="urn:huawei:yang:huawei-bier-fwd"
        xmlns:bier="urn:huawei:yang:huawei-bier"
        xmlns:ext="urn:huawei:yang:huawei-extension"
        xmlns:devm="urn:huawei:yang:huawei-devm">
  <namespace uri="urn:huawei:yang:huawei-bier-fwd"/>
  <prefix value="bier-fwd"/>
  <import module="huawei-bier">
    <prefix value="bier"/>
  </import>
  <import module="huawei-extension">
    <prefix value="ext"/>
  </import>
  <import module="huawei-devm">
    <prefix value="devm"/>
  </import>
  <organization>
    <text>Huawei Technologies Co., Ltd.</text>
  </organization>
  <contact>
    <text>Huawei Industrial Base
Bantian, Longgang
Shenzhen 518129
People's Republic of China
Website: http://www.huawei.com
Email: support@huawei.com</text>
  </contact>
  <description>
    <text>Bier forward.</text>
  </description>
  <revision date="2020-02-13">
    <description>
      <text>Init revision.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <ext:task-name value="bier"/>
  <container name="bier-fwd">
    <description>
      <text>Global configuration of bier-fwd.</text>
    </description>
    <container name="select-boards">
      <description>
        <text>Configure boards selected for bier.</text>
      </description>
      <leaf-list name="slot">
        <type name="leafref">
          <path value="/devm:devm/devm:lpu-boards/devm:lpu-board/devm:position"/>
        </type>
        <max-elements value="20"/>
        <description>
          <text>Configure slot ID.</text>
        </description>
      </leaf-list>
    </container>
  </container>
  <augment target-node="/bier:bier">
    <description>
      <text>Configure global attributes to the BIER.</text>
    </description>
    <container name="forward">
      <description>
        <text>Configure global attributes to the BIER.</text>
      </description>
      <container name="reserve-interface-enhancement">
        <description>
          <text>Configure reserve-interface enhancement.</text>
        </description>
        <leaf name="enable">
          <type name="boolean"/>
          <default value="false"/>
          <description>
            <text>Enable/disable reserve-interface enhancement.</text>
          </description>
        </leaf>
      </container>
    </container>
  </augment>
  <augment target-node="/bier:bier/bier:sub-domains/bier:sub-domain">
    <description>
      <text>Configure pipe mode ttl value.</text>
    </description>
    <container name="pipe-mode-ttl">
      <description>
        <text>Configure pipe mode ttl value.</text>
      </description>
      <leaf name="ttl-value">
        <type name="uint8">
          <range value="1..255"/>
        </type>
        <default value="255"/>
        <description>
          <text>Bier pipe mode ttl value.</text>
        </description>
      </leaf>
    </container>
    <container name="load-balance-enhance-factor">
      <when condition="../bier:address-family = 'ipv6-unicast'"/>
      <description>
        <text>Configure load-balance enhance factor.</text>
      </description>
      <leaf name="factor-value">
        <type name="uint8">
          <range value="1..64"/>
        </type>
        <must condition="(../bier-fwd:factor-value * ../../bier:load-balance-num) &lt;= 64"/>
        <description>
          <text>Configure load-balance enhance factor.</text>
        </description>
      </leaf>
    </container>
  </augment>
</module>
