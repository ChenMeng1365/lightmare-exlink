<?xml version="1.0" encoding="UTF-8"?>
<module name="huawei-lmp"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:lmp="urn:huawei:yang:huawei-lmp"
        xmlns:ext="urn:huawei:yang:huawei-extension">
  <yang-version value="1"/>
  <namespace uri="urn:huawei:yang:huawei-lmp"/>
  <prefix value="lmp"/>
  <import module="huawei-extension">
    <prefix value="ext"/>
  </import>
  <organization>
    <text>Huawei Technologies Co., Ltd.</text>
  </organization>
  <contact>
    <text>Huawei Industrial Base
Bantian, Longgang
Shenzhen 518129
People's Republic of China
Website: http://www.huawei.com
Email: support@huawei.com</text>
  </contact>
  <description>
    <text>Link management protocol.</text>
  </description>
  <revision date="2019-09-21">
    <description>
      <text>Initial revision.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <ext:task-name value="lmp"/>
  <typedef name="neighbor-mode">
    <type name="enumeration">
      <enum name="none">
        <value value="0"/>
        <description>
          <text>None mode.</text>
        </description>
      </enum>
      <enum name="static">
        <value value="1"/>
        <description>
          <text>Static mode.</text>
        </description>
      </enum>
    </type>
    <description>
      <text>The LMP neighbor mode.</text>
    </description>
  </typedef>
  <typedef name="link-state">
    <type name="enumeration">
      <enum name="up">
        <value value="0"/>
        <description>
          <text>State up.</text>
        </description>
      </enum>
      <enum name="down">
        <value value="1"/>
        <description>
          <text>State down.</text>
        </description>
      </enum>
    </type>
    <description>
      <text>The link state.</text>
    </description>
  </typedef>
  <typedef name="encode-type">
    <type name="enumeration">
      <enum name="ethernet">
        <value value="2"/>
        <description>
          <text>Ethernet.</text>
        </description>
      </enum>
    </type>
    <description>
      <text>The data link encode type.</text>
    </description>
  </typedef>
  <container name="lmp">
    <description>
      <text>Configure link management protocol.</text>
    </description>
    <container name="global">
      <description>
        <text>Configure LMP global attributes.</text>
      </description>
      <leaf name="enable">
        <type name="boolean"/>
        <default value="false"/>
        <description>
          <text>Enable/disable LMP.</text>
        </description>
      </leaf>
    </container>
    <container name="neighbors">
      <when condition="../global/enable='true'"/>
      <description>
        <text>List of LMP peers.</text>
      </description>
      <list name="neighbor">
        <key value="name"/>
        <max-elements value="255"/>
        <description>
          <text>Configure LMP operations on devices. It lists a series of LMP operation entries.</text>
        </description>
        <leaf name="name">
          <type name="string">
            <length value="1..32"/>
            <pattern value="[a-zA-Z][^?'&quot;|&lt;&gt;]{0,}"/>
          </type>
          <description>
            <text>LMP peer name.</text>
          </description>
        </leaf>
        <leaf name="mode">
          <type name="neighbor-mode"/>
          <default value="none"/>
          <description>
            <text>LMP peer type.</text>
          </description>
        </leaf>
      </list>
    </container>
  </container>
</module>
