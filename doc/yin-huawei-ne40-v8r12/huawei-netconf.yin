<?xml version="1.0" encoding="UTF-8"?>
<module name="huawei-netconf"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:netconf="urn:huawei:yang:huawei-netconf"
        xmlns:ext="urn:huawei:yang:huawei-extension">
  <namespace uri="urn:huawei:yang:huawei-netconf"/>
  <prefix value="netconf"/>
  <import module="huawei-extension">
    <prefix value="ext"/>
  </import>
  <organization>
    <text>Huawei Technologies Co., Ltd.</text>
  </organization>
  <contact>
    <text>Huawei Industrial Base
Bantian, Longgang
Shenzhen 518129
People's Republic of China
Website: http://www.huawei.com
Email: support@huawei.com</text>
  </contact>
  <description>
    <text>The NETCONF protocol defines a simple mechanism through which a network device can be managed, configuration data information can be retrieved, and new configuration data can be uploaded and manipulated.</text>
  </description>
  <revision date="2020-02-22">
    <description>
      <text>Add rpc to manage active YANG modules.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <revision date="2019-05-05">
    <description>
      <text>Init revision.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <ext:task-name value="netconf"/>
  <container name="netconf">
    <description>
      <text>The NETCONF protocol defines a simple mechanism through which a network device can be managed, configuration data information can be retrieved, and new configuration data can be uploaded and manipulated.</text>
    </description>
    <container name="operation-log-switch">
      <description>
        <text>Configure to get RPC operation log.</text>
      </description>
      <leaf name="get">
        <type name="boolean"/>
        <default value="false"/>
        <description>
          <text>Enable/disable to get operation log.</text>
        </description>
      </leaf>
    </container>
    <container name="active-modules">
      <config value="false"/>
      <description>
        <text>List of active YANG modules.</text>
      </description>
      <list name="active-module">
        <key value="module-name"/>
        <config value="false"/>
        <description>
          <text>Statistics of active YANG module.</text>
        </description>
        <leaf name="module-name">
          <type name="string">
            <length value="1..127"/>
          </type>
          <description>
            <text>Active YANG module name.</text>
          </description>
        </leaf>
      </list>
    </container>
  </container>
  <rpc name="activate-module">
    <description>
      <text>Activate YANG modules.</text>
    </description>
    <ext:node-ref value="/netconf/active-modules/active-module"/>
    <input>
      <leaf name="module-name">
        <type name="leafref">
          <path value="/netconf:netconf/netconf:active-modules/netconf:active-module/netconf:module-name"/>
        </type>
        <mandatory value="true"/>
        <description>
          <text>The YANG module name to activate.</text>
        </description>
      </leaf>
    </input>
  </rpc>
</module>
