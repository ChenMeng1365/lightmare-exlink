<?xml version="1.0" encoding="UTF-8"?>
<module name="zxr10-bridge-domain"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:bridge-domain="http://www.zte.com.cn/zxr10/netconf/schema/rosng/bridge-domain"
        xmlns:ncd="http://www.zte.com.cn/zxr10/netconf/schema/rosng/netconf-defs">
  <namespace uri="http://www.zte.com.cn/zxr10/netconf/schema/rosng/bridge-domain"/>
  <prefix value="bridge-domain"/>
  <yang-version value="1"/>
  <import module="zxr10-netconf-defs">
    <prefix value="ncd"/>
  </import>
  <organization>
    <text>ZTE Corporation</text>
  </organization>
  <contact>
    <text>ZTE Corporation  
   Nanjing Institute of ZTE Corporation 
   No.68 Zijinghua Rd. Yuhuatai District, Nanjing, China 
   Tel: +86-25-52870000</text>
  </contact>
  <revision date="2020-04-09">
    <description>
      <text>Initial version.</text>
    </description>
  </revision>
  <container name="state">
    <description>
      <text>Information of bridge-domain state.</text>
    </description>
    <config value="false"/>
    <container name="bridge-domain">
      <description>
        <text>Information of bridge-domain state.</text>
      </description>
      <container name="broadcast-tables">
        <description>
          <text>Information of bridge-domain broadcast tables.</text>
        </description>
        <list name="broadcast-table">
          <description>
            <text>Information of bridge-domain broadcast table.</text>
          </description>
          <key value="vpls-instance-name vlan-id"/>
          <ncd:select fields="vpls-instance-name"/>
          <leaf name="vpls-instance-name">
            <description>
              <text>VPLS instance name.</text>
            </description>
            <type name="string">
              <length value="1..32">
                <description>
                  <text>The length of VPLS instance name.</text>
                </description>
              </length>
            </type>
          </leaf>
          <leaf name="vlan-id">
            <description>
              <text>VLAN ID.</text>
            </description>
            <type name="uint16">
              <range value="0..4094">
                <description>
                  <text>VLAN ID must be in this range.</text>
                </description>
              </range>
            </type>
          </leaf>
          <leaf name="vpn-id">
            <description>
              <text>VPN ID.</text>
            </description>
            <type name="uint32"/>
          </leaf>
          <container name="broadcast-members">
            <description>
              <text>Information of bridge-domain broadcast members.</text>
            </description>
            <list name="dynamic-vxlan-tunnel">
              <description>
                <text>Information of bridge-domain broadcast member of dynamic vxlan tunnel.</text>
              </description>
              <key value="vni dynamic-tunnel-id"/>
              <ncd:select fields="vni dynamic-tunnel-id"/>
              <leaf name="vni">
                <description>
                  <text>VXLAN Network Identifier.</text>
                </description>
                <type name="uint32">
                  <range value="1..16777215">
                    <description>
                      <text>The value of VXLAN,it must be between 1 to 16777215.</text>
                    </description>
                  </range>
                </type>
              </leaf>
              <leaf name="dynamic-tunnel-id">
                <description>
                  <text>Dynamic tunnel ID.</text>
                </description>
                <type name="uint32"/>
              </leaf>
            </list>
            <list name="static-vxlan-tunnel">
              <description>
                <text>Information of bridge-domain broadcast member of static vxlan tunnel.</text>
              </description>
              <key value="vni static-tunnel-name"/>
              <ncd:select fields="vni static-tunnel-name"/>
              <leaf name="vni">
                <description>
                  <text>VXLAN Network Identifier.</text>
                </description>
                <type name="uint32">
                  <range value="1..16777215">
                    <description>
                      <text>The value of VXLAN,it must be between 1 to 16777215.</text>
                    </description>
                  </range>
                </type>
              </leaf>
              <leaf name="static-tunnel-name">
                <description>
                  <text>Static tunnel name.</text>
                </description>
                <type name="ncd:ifname">
                  <length value="1..31">
                    <description>
                      <text>The length of static tunnel name.</text>
                    </description>
                  </length>
                </type>
              </leaf>
            </list>
          </container>
        </list>
      </container>
    </container>
  </container>
</module>
