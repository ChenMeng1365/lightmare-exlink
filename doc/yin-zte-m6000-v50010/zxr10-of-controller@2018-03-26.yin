<?xml version="1.0" encoding="UTF-8"?>
<module name="zxr10-of-controller"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:of-controller="http://www.zte.com.cn/zxr10/netconf/schema/rosng/of-controller"
        xmlns:ncd="http://www.zte.com.cn/zxr10/netconf/schema/rosng/netconf-defs">
  <namespace uri="http://www.zte.com.cn/zxr10/netconf/schema/rosng/of-controller"/>
  <prefix value="of-controller"/>
  <import module="zxr10-netconf-defs">
    <prefix value="ncd"/>
  </import>
  <organization>
    <text>ZTE Corporation</text>
  </organization>
  <contact>
    <text>ZTE Corporation  
   Nanjing Institute of ZTE Corporation 
   No.68 Zijinghua Rd. Yuhuatai District, Nanjing, China 
   Tel: +86-25-52870000</text>
  </contact>
  <revision date="2018-03-26">
    <description>
      <text>Initial version.</text>
    </description>
  </revision>
  <container name="configuration">
    <description>
      <text>Configuration for openflow controller</text>
    </description>
    <container name="of-controllers">
      <list name="of-controller">
        <key value="name"/>
        <leaf name="name">
          <description>
            <text>Configure Name of openflow controller</text>
          </description>
          <type name="string"/>
        </leaf>
        <container name="listen">
          <presence value="listen"/>
          <leaf name="proto">
            <description>
              <text>Configure type of transport layer protocol</text>
            </description>
            <type name="enumeration">
              <enum name="tcp">
                <value value="1"/>
              </enum>
              <enum name="tls">
                <value value="2"/>
              </enum>
            </type>
            <mandatory value="true"/>
          </leaf>
          <leaf name="listen-port">
            <description>
              <text>Configure listen port</text>
            </description>
            <type name="uint32">
              <range value="1025..65535"/>
            </type>
            <mandatory value="true"/>
          </leaf>
          <leaf name="listen-ip">
            <description>
              <text>Configure ipv4 address for listen</text>
            </description>
            <type name="ncd:ipv4-address"/>
          </leaf>
          <leaf name="vrf">
            <description>
              <text>Configure VRF for listen command</text>
            </description>
            <type name="string"/>
          </leaf>
        </container>
        <container name="keepalive">
          <presence value="keepalive"/>
          <leaf name="probe-interval">
            <description>
              <text>Configure time of keepalive interval</text>
            </description>
            <type name="uint32">
              <range value="1..65535"/>
            </type>
            <default value="60"/>
          </leaf>
          <leaf name="probe-count">
            <description>
              <text>Configure keepalive count</text>
            </description>
            <type name="uint16">
              <range value="1..10"/>
            </type>
            <default value="3"/>
          </leaf>
        </container>
        <container name="bind-tls-cert">
          <description>
            <text>bind tls cert</text>
          </description>
          <presence value="TLS"/>
          <leaf name="context-name">
            <description>
              <text>Configure context-name for TLS</text>
            </description>
            <type name="string"/>
            <mandatory value="true"/>
          </leaf>
          <leaf name="profile-name">
            <description>
              <text>Configure profile-name for TLS</text>
            </description>
            <type name="string"/>
          </leaf>
        </container>
      </list>
    </container>
  </container>
</module>
