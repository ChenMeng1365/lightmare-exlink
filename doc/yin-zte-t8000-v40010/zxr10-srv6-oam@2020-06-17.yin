<?xml version="1.0" encoding="UTF-8"?>
<module name="zxr10-srv6-oam"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:srv6-oam="http://www.zte.com.cn/zxr10/netconf/schema/rosng/srv6-oam"
        xmlns:ncd="http://www.zte.com.cn/zxr10/netconf/schema/rosng/netconf-defs">
  <namespace uri="http://www.zte.com.cn/zxr10/netconf/schema/rosng/srv6-oam"/>
  <prefix value="srv6-oam"/>
  <import module="zxr10-netconf-defs">
    <prefix value="ncd"/>
  </import>
  <organization>
    <text>ZTE Corporation</text>
  </organization>
  <contact>
    <text>ZTE Corporation  
   Nanjing Institute of ZTE Corporation 
   No.68 Zijinghua Rd. Yuhuatai District, Nanjing, China 
   Tel: +86-25-52870000</text>
  </contact>
  <revision date="2020-06-17">
    <description>
      <text>Initial version.
Configure the generatation of END OP.</text>
    </description>
  </revision>
  <feature name="srv6-oam-function">
    <description>
      <text>SRv6 OAM function.</text>
    </description>
  </feature>
  <container name="configuration">
    <description>
      <text>SRv6 oam configuration.</text>
    </description>
    <container name="srv6-oam">
      <description>
        <text>SRv6 oam configuration.</text>
      </description>
      <container name="srv6-oam-switch">
        <description>
          <text>Enable or disable SRv6 OAM.</text>
        </description>
        <leaf name="switch-set">
          <description>
            <text>Enable or disable SRv6 OAM.</text>
          </description>
          <type name="enumeration">
            <enum name="disable">
              <value value="0"/>
              <description>
                <text>Disable the function of SRv6 OAM.</text>
              </description>
            </enum>
            <enum name="enable">
              <value value="1"/>
              <description>
                <text>Enable the function of SRv6 OAM.</text>
              </description>
            </enum>
          </type>
          <default value="disable"/>
        </leaf>
      </container>
      <container name="end-op">
        <description>
          <text>End op configuration.</text>
        </description>
        <list name="end-ops">
          <description>
            <text>End op configuration</text>
          </description>
          <key value="locator-name"/>
          <leaf name="locator-name">
            <description>
              <text>Locator name.</text>
            </description>
            <type name="string">
              <length value="1..31">
                <description>
                  <text>The length of locator name is from 1 to 31.</text>
                </description>
              </length>
            </type>
            <mandatory value="true"/>
          </leaf>
          <choice name="mode">
            <description>
              <text>Choice mode.</text>
            </description>
            <case name="auto">
              <description>
                <text>Automatic mode.</text>
              </description>
              <leaf name="auto">
                <description>
                  <text>Enable automatic mode.</text>
                </description>
                <type name="empty"/>
                <mandatory value="true"/>
              </leaf>
            </case>
            <case name="static">
              <description>
                <text>Static mode.</text>
              </description>
              <leaf name="static">
                <description>
                  <text>Enable static mode.</text>
                </description>
                <type name="empty"/>
                <mandatory value="true"/>
              </leaf>
              <leaf name="func-code">
                <description>
                  <text>Function OP code.</text>
                </description>
                <type name="ncd:ipv6-address-none-zero"/>
                <mandatory value="true"/>
              </leaf>
            </case>
          </choice>
        </list>
      </container>
    </container>
  </container>
</module>
