<?xml version="1.0" encoding="UTF-8"?>
<submodule name="openconfig-pf-interfaces"
           xmlns="urn:ietf:params:xml:ns:yang:yin:1"
           xmlns:oc-pf="http://openconfig.net/yang/policy-forwarding"
           xmlns:oc-ext="http://openconfig.net/yang/openconfig-ext"
           xmlns:oc-if="http://openconfig.net/yang/interfaces">
  <belongs-to module="openconfig-policy-forwarding">
    <prefix value="oc-pf"/>
  </belongs-to>
  <import module="openconfig-extensions">
    <prefix value="oc-ext"/>
  </import>
  <import module="openconfig-interfaces">
    <prefix value="oc-if"/>
  </import>
  <include module="openconfig-pf-forwarding-policies"/>
  <organization>
    <text>OpenConfig working group</text>
  </organization>
  <contact>
    <text>OpenConfig working group
www.openconfig.net</text>
  </contact>
  <description>
    <text>This submodule contains groupings related to the association
between interfaces and policy forwarding rules.</text>
  </description>
  <oc-ext:openconfig-version semver="0.2.1"/>
  <revision date="2018-11-21">
    <description>
      <text>Add OpenConfig module metadata extensions.</text>
    </description>
    <reference>
      <text>0.2.1</text>
    </reference>
  </revision>
  <revision date="2017-06-21">
    <description>
      <text>Amend policy forwarding model based on ACL changes.</text>
    </description>
    <reference>
      <text>0.2.0</text>
    </reference>
  </revision>
  <revision date="2017-02-28">
    <description>
      <text>Initial public release of policy forwarding.</text>
    </description>
    <reference>
      <text>0.1.0</text>
    </reference>
  </revision>
  <revision date="2016-11-08">
    <description>
      <text>Initial revision</text>
    </description>
    <reference>
      <text>0.0.1</text>
    </reference>
  </revision>
  <grouping name="pf-interfaces-structural">
    <description>
      <text>Structural grouping for interface to forwarding policy bindings
within the policy-forwarding model.</text>
    </description>
    <container name="interfaces">
      <description>
        <text>Configuration and operational state relating policy
forwarding on interfaces.</text>
      </description>
      <list name="interface">
        <key value="interface-id"/>
        <description>
          <text>Configuration and operationals state relating to the
relationship between interfaces and policy-based forwarding
rules.</text>
        </description>
        <leaf name="interface-id">
          <type name="leafref">
            <path value="../config/interface-id"/>
          </type>
          <description>
            <text>A reference to the unique identifier for the interface
being referenced by the policy.</text>
          </description>
        </leaf>
        <container name="config">
          <description>
            <text>Configuration parameters relating to an interface to
policy forwarding rule binding.</text>
          </description>
          <uses name="pf-interface-config"/>
        </container>
        <container name="state">
          <config value="false"/>
          <description>
            <text>Operational state parameters relating to an interface to
policy forwarding rule binding.</text>
          </description>
          <uses name="pf-interface-config"/>
        </container>
        <uses name="oc-if:interface-ref"/>
      </list>
    </container>
  </grouping>
  <grouping name="pf-interface-config">
    <description>
      <text>Configuration parameters relating to an interface to policy
forwarding rule binding.</text>
    </description>
    <leaf name="interface-id">
      <type name="oc-if:interface-id"/>
      <description>
        <text>A unique identifier for the interface.</text>
      </description>
    </leaf>
    <leaf name="apply-forwarding-policy">
      <type name="leafref">
        <path value="../../../../policies/policy/config/policy-id"/>
      </type>
      <description>
        <text>The policy to be applied on the interface. Packets ingress on
the referenced interface should be compared to the match
criteria within the specified policy, and in the case that
these criteria are met, the forwarding actions specified
applied. These policies should be applied following quality of
service classification, and ACL actions if such entities are
referenced by the corresponding interface.</text>
      </description>
    </leaf>
  </grouping>
</submodule>
