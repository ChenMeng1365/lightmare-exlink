<?xml version="1.0" encoding="UTF-8"?>
<module name="huawei-erps-fwd"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:erps-fwd="urn:huawei:yang:huawei-erps-fwd"
        xmlns:ext="urn:huawei:yang:huawei-extension"
        xmlns:erps="urn:huawei:yang:huawei-erps">
  <namespace uri="urn:huawei:yang:huawei-erps-fwd"/>
  <prefix value="erps-fwd"/>
  <import module="huawei-extension">
    <prefix value="ext"/>
  </import>
  <import module="huawei-erps">
    <prefix value="erps"/>
  </import>
  <ext:task-name value="erps"/>
  <organization>
    <text>Huawei Technologies Co., Ltd.</text>
  </organization>
  <contact>
    <text>Huawei Industrial Base
Bantian, Longgang
Shenzhen 518129
People's Republic of China
Website: http://www.huawei.com
Email: support@huawei.com</text>
  </contact>
  <description>
    <text>Ethernet ring protection switching.</text>
  </description>
  <revision date="2020-06-02">
    <description>
      <text>Init revision.</text>
    </description>
    <reference>
      <text>Huawei private.</text>
    </reference>
  </revision>
  <augment target-node="/erps:erps/erps:rings/erps:ring">
    <description>
      <text>ERPS ring configuration.</text>
    </description>
    <container name="fast-switch">
      <description>
        <text>Configure ERPS fast switch.</text>
      </description>
      <leaf name="force-bc-time">
        <type name="uint32">
          <range value="0..30"/>
        </type>
        <units name="s"/>
        <default value="15"/>
        <description>
          <text>ERPS fast switch force broadcast time (in seconds), ranging from 0 to 30.</text>
        </description>
      </leaf>
    </container>
  </augment>
</module>
